{% extends 'base.html.tmpl' %}

{% block content %}
{% set page = pages[0] %}
<h1><a href='{{ page.url(url) }}'>{{ page.title|escape|decode }}</a></h1>
{%- if page.date -%}
<time date='{{ page.date }}'>{{ page.date.strftime('%B %e %Y') }}</time>
{%- endif -%}
<div class='content'>
{{ page.html(curdir='.')|decode }}</div>
{% endblock %}

{% block navigation %}
{{ super() }}

<h4>Older posts</h4>

{% set pages = pages[1:] %}
{% include 'pages_summary.html.tmpl' %}
{% endblock %}

