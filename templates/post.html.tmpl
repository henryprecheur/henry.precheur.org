{% extends 'base.html.tmpl' %}

{% block content %}
<h1>{{ title|escape|decode }}</h1>
{% if date %}
<p class='page-header'>
<span class='date'>
{{ date.strftime('%B %e %Y') }}
</span>
</p>
{% endif %}
<div class='page-content'>
{{ content|decode }}</div>

{% endblock %}
